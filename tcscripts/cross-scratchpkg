name=scratchpkg
version=0.4
source="https://github.com/venomlinux/scratchpkg/archive/$version/$name-$version.tar.gz
	https://github.com/venomlinux/scratchpkg/commit/a23a22c659773764fee733656038700789ad9d42.patch
	https://github.com/venomlinux/scratchpkg/commit/c8b2eca5ba1b18ee4983f7047cc81eb34a9036ae.patch
	https://github.com/venomlinux/scratchpkg/commit/8e8c62d338bc2054b45dad5e57bc43767141ff74.patch"

build() {
	cd $name-$version
	for p in $SRCDIR/*.patch; do
		patch -Np1 -i $p || exit 1
	done
	install -d $TCDIR/bin
	install -m755 pkgadd pkgdel pkgbuild xchroot $TCDIR/bin
}
